<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Wadaie" preserve-order="true">

    <listeners>
        <listener class-name="report.WebTestListener"/>
    </listeners>

    <!--    Auth APIs-->
    <test name="Login Test">
        <classes>
            <class name="APITests.Auth.LoginTest"/>
        </classes>
    </test>
    <test name="Register Test">
        <classes>
            <class name="APITests.Auth.RegisterTest"/>
        </classes>
    </test>
    <test name="Update User Test">
        <classes>
            <class name="APITests.Auth.UpdateUserTest"/>
        </classes>
    </test>

    <!--    Admin APIs-->
    <test name="Create Offer Test">
        <classes>
            <class name="APITests.Admin.CreateOfferTest"/>
        </classes>
    </test>
    <test name="Update Offer Test">
        <classes>
            <class name="APITests.Admin.UpdateOfferTest"/>
        </classes>
    </test>
    <test name="Approve Offer Test">
        <classes>
            <class name="APITests.Admin.ApproveDepositTest"/>
        </classes>
    </test>
    <test name="Reject Offer Test">
        <classes>
            <class name="APITests.Admin.RejectDepositTest"/>
        </classes>
    </test>
    <test name="Delete Offer Test">
        <classes>
            <class name="APITests.Admin.DeleteOfferTest"/>
        </classes>
    </test>

    <!--    Deposit APIs-->
    <test name="Get Available Deposits">
        <classes>
            <class name="APITests.Deposit.AvailableDepositTest"/>
        </classes>
    </test>
    <test name="Get All Deposits">
        <classes>
            <class name="APITests.Deposit.GetAllDepositsTest"/>
        </classes>
    </test>
    <test name="Get Deposit By ID">
        <classes>
            <class name="APITests.Deposit.GetDepositIDTest"/>
        </classes>
    </test>
    <test name="Request Custom Deposit">
        <classes>
            <class name="APITests.Deposit.RequestDepositTest"/>
        </classes>
    </test>


</suite>